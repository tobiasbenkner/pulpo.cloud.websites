---
import Icon from "./ui/Icon.astro";
import { Image } from "astro:assets";
import { getTenant } from "@/lib/directus";
import { getFooterItems } from "./navbar/getNavbarItems";
import { getNavbarItems } from "./navbar/getNavbarItems";
import logo from "../assets/chiquita.webp";

interface Props {
  lang: string;
}

const tenant = await getTenant();
const { lang } = Astro.props;

const currentYear = new Date().getFullYear();
const navHeader = await getNavbarItems(lang as any, Astro.url.pathname);
const navFooter = await getFooterItems(lang as any, Astro.url.pathname);
---

<footer
  class="bg-background text-white pt-24 pb-12 relative overflow-hidden border-t border-white/5"
>
  <!-- Dekorativer "Schein" im Hintergrund -->
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-px bg-linear-to-r from-transparent via-amber-200/20 to-transparent"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6">
    <!-- Grid jetzt optimiert auf 3 Hauptspalten -->
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8 mb-20"
    >
      <!-- Spalte 1: Brand -->
      <div class="lg:col-span-5 space-y-6">
        <div>
          <Image src={logo} alt="Logo" class="h-24 w-auto object-contain" />
        </div>

        <!-- Social Icons -->
        <div class="flex flex-wrap gap-4">
          {
            Object.keys(tenant.social).map((socialKey) => (
              <a
                href={tenant.social[socialKey] as any}
                target="_blank"
                aria-label={socialKey}
                class="w-10 h-10 flex items-center justify-center rounded-full border border-white/10 text-gray-400 hover:text-amber-200 hover:border-amber-200/50 hover:bg-white/5 transition-all duration-300"
              >
                <Icon name={socialKey as any} size={26} />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Spalte 2: Navigation -->
      <div class="lg:col-span-3 lg:pl-4">
        <h3 class="text-xs tracking-[0.3em] uppercase text-amber-200/50 mb-8">
          Explorar
        </h3>
        <ul class="space-y-4">
          {
            navHeader.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm tracking-[0.2em] uppercase text-gray-400 hover:text-white transition-colors duration-300 flex items-center gap-2 group"
                >
                  <span class="w-0 h-px bg-amber-200 transition-all duration-300 group-hover:w-4" />
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Spalte 3: Kontakt & CTA -->
      <div class="lg:col-span-4">
        <h3 class="text-xs tracking-[0.3em] uppercase text-amber-200/50 mb-8">
          Visítanos
        </h3>

        <div class="flex flex-col gap-8">
          <!-- Adresse & Kontakt -->
          <div class="space-y-4">
            <div class="space-y-1 text-gray-400 font-serif italic">
              <p>
                {tenant?.name}<br />
                {tenant?.street}<br />
                {tenant?.postcode}
                {tenant?.city}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <p class="text-[10px] tracking-[0.2em] uppercase text-gray-600">
        © {currentYear} El Búho Tuerto.
      </p>

      <div class="flex flex-wrap gap-6 justify-center">
        {
          navFooter.map((item) => (
            <a
              href={item.href}
              class="text-[10px] tracking-widest uppercase text-gray-600 hover:text-gray-400 transition-colors"
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
