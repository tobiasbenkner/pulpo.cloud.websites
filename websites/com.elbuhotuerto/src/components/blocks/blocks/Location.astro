---
import PrivacyMap from "../../PrivacyMap.astro";
import Icon from "../../ui/Icon.astro";
import SectionHeader from "../../ui/SectionHeader.astro";
import type { Tenant } from "@pulpo/cms";
import { resolveTranslations } from "@/lib/i18n";
import { translations } from "./Location.i18n";

type Props = {
  title: string;
  subtitle: string;
  tenant: Tenant;
  lang: string;
};

const { title, subtitle, tenant, lang } = Astro.props;

const contacts = resolveTranslations(tenant.contacts, lang);
const opening_hours = resolveTranslations(tenant.opening_hours, lang);
const t = resolveTranslations(translations, lang);
---

<section class="bg-background py-24 px-6 relative overflow-hidden text-white">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <SectionHeader subtitle={subtitle} title={title} />

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
      <!-- Linke Spalte: Info -->
      <div class="lg:col-span-5 space-y-12">
        <!-- Anschrift -->
        <div>
          <h3 class="text-[10px] tracking-[0.3em] text-white/30 uppercase mb-4">
            {t.location}
          </h3>
          <p
            class="text-xl md:text-2xl font-serif italic text-gray-200 leading-relaxed max-w-sm"
          >
            {tenant?.name}
            {tenant?.street}
            {tenant?.postcode}
            {tenant?.city}
          </p>
        </div>

        <!-- Telefone & Email -->
        <div class="space-y-8">
          <div class="flex flex-col gap-6">
            {
              contacts.map((it) => {
                return (
                  <a href={it.url} class="group block w-fit">
                    <span class="block text-[9px] text-white/20 uppercase tracking-[0.2em] mb-1 group-hover:text-white/50 transition-colors">
                      {it.title}
                    </span>
                    <span class="text-xl font-light ">{it.label}</span>
                  </a>
                );
              })
            }
          </div>
        </div>

        <!-- Social Media Icons -->
        <div>
          <h3 class="text-[10px] tracking-[0.3em] text-white/30 uppercase mb-6">
            {t.follow}
          </h3>
          <div class="flex flex-wrap gap-6">
            {
              Object.entries(tenant?.social ?? {})
                .filter(([_, url]) => !!url) // Nur Links anzeigen, die nicht leer sind
                .map(([name, url]) => (
                  <a
                    href={url}
                    target="_blank"
                    aria-label={name}
                    class="w-12 h-12 flex items-center justify-center rounded-full border border-white/10 text-gray-400 hover:text-amber-200 hover:border-amber-200/50 hover:bg-white/5 transition-all duration-300"
                  >
                    <Icon name={name as any} size={26} />
                  </a>
                ))
            }
          </div>
        </div>

        <!-- Horario -->
        <div class="pt-4">
          <h3 class="text-[10px] tracking-[0.3em] text-white/30 uppercase mb-6">
            {t.schedule}
          </h3>
          <ul class="space-y-4">
            {
              opening_hours.map((item) => (
                <li class="flex justify-between items-end border-b border-white/5 pb-3">
                  <span class="text-sm text-gray-400 font-light">
                    {item.days_label}
                  </span>
                  <span class="text-sm md:text-base font-serif italic text-white tracking-wide">
                    {item.hours_text}
                  </span>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <!-- Rechte Spalte: Map -->
      <div class="lg:col-span-7 h-full min-h-112.5 lg:min-h-162.5 relative">
        <div
          class="absolute inset-0 border border-white/10 rounded-3xl overflow-hidden group"
        >
          <div
            class="absolute inset-0 bg-black/20 pointer-events-none group-hover:bg-transparent transition-all duration-700 z-10"
          >
          </div>
          <PrivacyMap url={tenant?.maps ?? ""} />
          <iframe
            src={tenant?.maps}
            class="w-full h-full"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
          >
          </iframe>
        </div>
      </div>
    </div>
  </div>
</section>
