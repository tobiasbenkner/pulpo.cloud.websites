---
import type { ContactTranslations } from "./contact.i18n";
import type { Language } from "@/lib/i18n";
import Container from "@/components/ui/Container.astro";
import PrivacyMap from "@/components/ui/PrivacyMap.astro";
import OpeningHours from "@/components/contact/OpeningHours.svelte";
import { siteData } from "@/data/siteData";
import { DIRECTUS_URL, TENANT } from "@/config";
import { Image, getImage } from "astro:assets";
import heroImage from "@/assets/gallery_1.jpg";

interface Props {
  lang: Language;
  t: ContactTranslations;
}

const { lang, t } = Astro.props;
const optimizedHero = await getImage({ src: heroImage, width: 1920 });
---

<!-- Hero Section -->
<section class="relative min-h-[50vh] flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div
    class="absolute inset-0 bg-cover bg-center"
    style={`background-image: url('${optimizedHero.src}');`}
  >
    <div class="absolute inset-0 bg-gradient-to-b from-background/80 via-background/60 to-background"></div>
  </div>

  <!-- Content -->
  <Container class="relative z-10 text-center py-24 md:py-32">
    <div class="flex items-center justify-center gap-3 mb-6">
      <div class="h-px w-12 bg-secondary"></div>
      <span class="text-secondary text-sm font-medium tracking-widest uppercase">{t.contact.label}</span>
      <div class="h-px w-12 bg-secondary"></div>
    </div>
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
      {t.hero.title}
    </h1>
    <p class="text-xl md:text-2xl text-text-muted max-w-2xl mx-auto">
      {t.hero.subtitle}
    </p>
  </Container>
</section>

<!-- Intro Section -->
<section class="py-16 md:py-24 bg-background">
  <Container>
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">
        {t.intro.title}
      </h2>
      <p class="text-lg text-text-muted leading-relaxed mb-6">
        {t.intro.text1}
      </p>
      <p class="text-lg text-text-muted leading-relaxed">
        {t.intro.text2}
      </p>
    </div>
  </Container>
</section>

<!-- Reasons Section -->
<section class="py-16 md:py-24 bg-surface">
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        {t.reasons.title}
      </h2>
      <div class="h-1 w-16 bg-gradient-to-r from-transparent via-secondary to-transparent mx-auto"></div>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Reason 1 -->
      <div class="group bg-background rounded-2xl p-6 border border-border hover:border-secondary/50 transition-all duration-300">
        <div class="w-14 h-14 rounded-xl bg-secondary/10 flex items-center justify-center mb-4 group-hover:bg-secondary/20 transition-colors">
          <svg class="w-7 h-7 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{t.reasons.reason1.title}</h3>
        <p class="text-text-muted text-sm leading-relaxed">{t.reasons.reason1.text}</p>
      </div>

      <!-- Reason 2 -->
      <div class="group bg-background rounded-2xl p-6 border border-border hover:border-secondary/50 transition-all duration-300">
        <div class="w-14 h-14 rounded-xl bg-secondary/10 flex items-center justify-center mb-4 group-hover:bg-secondary/20 transition-colors">
          <svg class="w-7 h-7 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15.546c-.523 0-1.046.151-1.5.454a2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.704 2.704 0 00-3 0 2.704 2.704 0 01-3 0 2.701 2.701 0 00-1.5-.454M9 6v2m3-2v2m3-2v2M9 3h.01M12 3h.01M15 3h.01M21 21v-7a2 2 0 00-2-2H5a2 2 0 00-2 2v7h18zm-3-9v-2a2 2 0 00-2-2H8a2 2 0 00-2 2v2h12z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{t.reasons.reason2.title}</h3>
        <p class="text-text-muted text-sm leading-relaxed">{t.reasons.reason2.text}</p>
      </div>

      <!-- Reason 3 -->
      <div class="group bg-background rounded-2xl p-6 border border-border hover:border-secondary/50 transition-all duration-300">
        <div class="w-14 h-14 rounded-xl bg-secondary/10 flex items-center justify-center mb-4 group-hover:bg-secondary/20 transition-colors">
          <svg class="w-7 h-7 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{t.reasons.reason3.title}</h3>
        <p class="text-text-muted text-sm leading-relaxed">{t.reasons.reason3.text}</p>
      </div>

      <!-- Reason 4 -->
      <div class="group bg-background rounded-2xl p-6 border border-border hover:border-secondary/50 transition-all duration-300">
        <div class="w-14 h-14 rounded-xl bg-secondary/10 flex items-center justify-center mb-4 group-hover:bg-secondary/20 transition-colors">
          <svg class="w-7 h-7 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <h3 class="text-lg font-bold text-white mb-2">{t.reasons.reason4.title}</h3>
        <p class="text-text-muted text-sm leading-relaxed">{t.reasons.reason4.text}</p>
      </div>
    </div>
  </Container>
</section>

<!-- Contact Info Section -->
<section class="py-16 md:py-24 bg-background">
  <Container>
    <div class="text-center mb-12">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-8 bg-secondary"></div>
        <span class="text-secondary text-xs font-medium tracking-widest uppercase">{t.contact.label}</span>
        <div class="h-px w-8 bg-secondary"></div>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-white">
        {t.contact.title}
      </h2>
    </div>

    <div class="bg-surface rounded-2xl border border-border overflow-hidden shadow-xl">
      <div class="grid lg:grid-cols-2">
        <!-- Map -->
        <div class="h-64 sm:h-80 lg:h-auto lg:min-h-[450px]">
          <PrivacyMap
            url={siteData.contact.googleMapsEmbed}
            height="h-full"
            loadMap={t.contact.mapLoad}
            accept={t.contact.mapAccept}
            showMap={t.contact.mapShow}
          />
        </div>

        <!-- Contact Details -->
        <div class="p-6 md:p-8 lg:p-10">
          <!-- Address -->
          <div class="flex gap-4 mb-6">
            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-white font-semibold mb-1">{t.contact.addressLabel}</h3>
              <p class="text-text-muted text-sm leading-relaxed whitespace-pre-line">{siteData.contact.address}</p>
              <a
                href={siteData.contact.googleMaps}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1.5 mt-2 text-secondary hover:text-secondary-hover transition-colors text-sm font-medium"
              >
                {t.contact.viewOnMap}
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>

          <div class="h-px bg-border mb-6"></div>

          <!-- Opening Hours -->
          <div class="flex gap-4 mb-6">
            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-white font-semibold mb-2">{t.contact.hoursLabel}</h3>
              <OpeningHours
                client:load
                directusUrl={DIRECTUS_URL}
                tenant={TENANT}
                lang={lang}
                minimal={true}
              />
            </div>
          </div>

          <div class="h-px bg-border mb-6"></div>

          <!-- Email -->
          <div class="flex gap-4 mb-8">
            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-white font-semibold mb-1">{t.contact.emailLabel}</h3>
              <a
                href={`mailto:${siteData.contact.email}`}
                class="text-text-muted hover:text-secondary transition-colors text-sm"
              >
                {siteData.contact.email}
              </a>
            </div>
          </div>

          <!-- Social Media -->
          <div class="pt-6 border-t border-border">
            <h3 class="text-white font-semibold mb-4">{t.contact.socialLabel}</h3>
            <div class="flex gap-3">
              <a
                href={siteData.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-11 h-11 rounded-xl bg-secondary/10 hover:bg-secondary text-secondary hover:text-background transition-all duration-300"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                </svg>
              </a>
              <a
                href={siteData.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-11 h-11 rounded-xl bg-secondary/10 hover:bg-secondary text-secondary hover:text-background transition-all duration-300"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>

<!-- CTA Section -->
<section class="py-16 md:py-24 bg-surface">
  <Container>
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        {t.cta.title}
      </h2>
      <p class="text-lg text-text-muted leading-relaxed mb-8">
        {t.cta.text}
      </p>
      <a
        href={`mailto:${siteData.contact.email}`}
        class="inline-flex items-center gap-3 bg-secondary hover:bg-secondary-hover text-background font-bold py-4 px-8 rounded-full transition-all duration-300 shadow-lg hover:shadow-secondary/25"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        {t.cta.button}
      </a>
    </div>
  </Container>
</section>
