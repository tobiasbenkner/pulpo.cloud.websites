---
import type { HomeTranslations } from "./home.i18n";
import type { Language } from "@/lib/i18n";

import HeroSection from "./sections/HeroSection.astro";
import TestimonialSection from "./sections/TestimonialSection.astro";
import DrinksSection from "./sections/DrinksSection.astro";
import UniqueEventsSection from "./sections/UniqueEventsSection.astro";
import NetworkingSection from "./sections/NetworkingSection.astro";
import PhotoGallerySection from "./sections/PhotoGallerySection.astro";
import ReviewsSection from "./sections/ReviewsSection.astro";
import ContactSection from "./sections/ContactSection.astro";
import AgendaSection from "./sections/AgendaSection.astro";

interface Props {
  lang: Language;
  t: HomeTranslations;
}

const { lang, t } = Astro.props;
---

<HeroSection title={t.hero.title} subtitle={t.hero.subtitle} />

<TestimonialSection quote={t.testimonial.quote} author={t.testimonial.author} />

<AgendaSection title={t.agenda.title} lang={lang} />

<DrinksSection
  title={t.drinks.title}
  description={t.drinks.description}
  lang={lang}
/>

<UniqueEventsSection
  title={t.uniqueEvents.title}
  description={t.uniqueEvents.description}
  lang={lang}
/>

<NetworkingSection
  title={t.networking.title}
  description={t.networking.description}
  lang={lang}
/>

<PhotoGallerySection title={t.gallery.title} />

<ReviewsSection
  title={t.reviews.title}
  review1={t.reviews.review1}
  review2={t.reviews.review2}
  review3={t.reviews.review3}
  lang={lang}
/>

<ContactSection
  label={t.contact.label}
  title={t.contact.title}
  addressLabel={t.contact.addressLabel}
  emailLabel={t.contact.emailLabel}
  hoursLabel={t.contact.hoursLabel}
  viewOnMap={t.contact.viewOnMap}
  socialLabel={t.contact.socialLabel}
  mapLoad={t.contact.mapLoad}
  mapAccept={t.contact.mapAccept}
  mapShow={t.contact.mapShow}
  lang={lang}
/>
