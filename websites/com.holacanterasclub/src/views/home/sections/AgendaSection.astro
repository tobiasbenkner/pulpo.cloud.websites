---
import Container from "@/components/ui/Container.astro";
import EventList from "@/components/events/EventList.svelte";
import { DIRECTUS_URL, TENANT } from "@/config";
import type { Language } from "@/lib/i18n";

interface Props {
  title: string;
  lang: Language;
}

const { title, lang } = Astro.props;
---

<section class="py-16 md:py-24 bg-surface">
  <Container>
    <div class="text-center mb-12">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-8 bg-secondary"></div>
        <span
          class="text-secondary text-xs font-medium tracking-widest uppercase"
          >{lang === "en" ? "Events" : "Eventos"}</span
        >
        <div class="h-px w-8 bg-secondary"></div>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white">
        {title}
      </h2>
      <div
        class="h-1 w-16 bg-linear-to-r from-transparent via-secondary to-transparent mx-auto mt-4"
      >
      </div>
    </div>

    <EventList
      client:load
      directusUrl={DIRECTUS_URL}
      tenant={TENANT}
      lang={lang}
    />
  </Container>
</section>
