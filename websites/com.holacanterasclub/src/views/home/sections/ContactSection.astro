---
import Container from "@/components/ui/Container.astro";
import PrivacyMap from "@/components/ui/PrivacyMap.astro";
import OpeningHours from "@/components/contact/OpeningHours.svelte";
import { siteData } from "@/data/siteData";
import { DIRECTUS_URL, TENANT } from "@/config";
import type { Language } from "@/lib/i18n";

interface Props {
  label: string;
  title: string;
  addressLabel: string;
  emailLabel: string;
  hoursLabel: string;
  viewOnMap: string;
  socialLabel: string;
  mapLoad: string;
  mapAccept: string;
  mapShow: string;
  lang: Language;
}

const {
  label,
  title,
  addressLabel,
  emailLabel,
  hoursLabel,
  viewOnMap,
  socialLabel,
  mapLoad,
  mapAccept,
  mapShow,
  lang,
} = Astro.props;
---

<section class="py-16 md:py-24 bg-surface">
  <Container>
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-8 bg-secondary"></div>
        <span class="text-secondary text-xs font-medium tracking-widest uppercase">{label}</span>
        <div class="h-px w-8 bg-secondary"></div>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white">
        {title}
      </h2>
    </div>

    <!-- Main Content -->
    <div class="bg-background rounded-2xl border border-border overflow-hidden shadow-xl">
      <div class="grid lg:grid-cols-2">
        <!-- Map -->
        <div class="h-64 sm:h-80 lg:h-auto lg:min-h-[400px]">
          <PrivacyMap
            url={siteData.contact.googleMapsEmbed}
            height="h-full"
            loadMap={mapLoad}
            accept={mapAccept}
            showMap={mapShow}
          />
        </div>

        <!-- Contact Details -->
        <div class="p-6 md:p-8 lg:p-10">
          <!-- Address -->
          <div class="flex gap-4 mb-6">
            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-white font-semibold mb-1">{addressLabel}</h3>
              <p class="text-text-muted text-sm leading-relaxed whitespace-pre-line">{siteData.contact.address}</p>
              <a
                href={siteData.contact.googleMaps}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1.5 mt-2 text-secondary hover:text-secondary-hover transition-colors text-sm font-medium"
              >
                {viewOnMap}
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            </div>
          </div>

          <div class="h-px bg-border mb-6"></div>

          <!-- Opening Hours -->
          <div class="flex gap-4 mb-6">
            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-white font-semibold mb-2">{hoursLabel}</h3>
              <OpeningHours
                client:load
                directusUrl={DIRECTUS_URL}
                tenant={TENANT}
                lang={lang}
                minimal={true}
              />
            </div>
          </div>

          <div class="h-px bg-border mb-6"></div>

          <!-- Email -->
          <div class="flex gap-4 mb-8">
            <div class="w-12 h-12 rounded-xl bg-secondary/10 flex items-center justify-center shrink-0">
              <svg class="w-5 h-5 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <div>
              <h3 class="text-white font-semibold mb-1">{emailLabel}</h3>
              <a
                href={`mailto:${siteData.contact.email}`}
                class="text-text-muted hover:text-secondary transition-colors text-sm"
              >
                {siteData.contact.email}
              </a>
            </div>
          </div>

          <!-- Social Media -->
          <div class="pt-6 border-t border-border">
            <h3 class="text-white font-semibold mb-4">{socialLabel}</h3>
            <div class="flex gap-3">
              <a
                href={siteData.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-11 h-11 rounded-xl bg-secondary/10 hover:bg-secondary text-secondary hover:text-background transition-all duration-300"
                aria-label="Facebook"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                </svg>
              </a>
              <a
                href={siteData.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center w-11 h-11 rounded-xl bg-secondary/10 hover:bg-secondary text-secondary hover:text-background transition-all duration-300"
                aria-label="Instagram"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
