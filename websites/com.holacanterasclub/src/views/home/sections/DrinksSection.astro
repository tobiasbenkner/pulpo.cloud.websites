---
import Container from "@/components/ui/Container.astro";
import { Image, getImage } from "astro:assets";
import photo1 from "@/assets/cocktail_1.jpg";
import photo2 from "@/assets/cocktail_2.jpg";
import photo3 from "@/assets/cocktail_3.jpg";
import photo4 from "@/assets/cocktail_4.jpg";
import background from "@/assets/cocktail_background.jpg";

import type { Language } from "@/lib/i18n";

interface Props {
  title: string;
  description: string;
  lang: Language;
}

const { title, description, lang } = Astro.props;

const drinks = [
  { image: photo1, alt: "Cocktail 1" },
  { image: photo2, alt: "Cocktail 2" },
  { image: photo3, alt: "Cocktail 3" },
  { image: photo4, alt: "Cocktail 4" },
];

const optimizedBg = await getImage({ src: background, width: 1920 });
---

<section class="relative py-16 md:py-24 overflow-hidden">
  <!-- Parallax Background -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-fixed"
    style={`background-image: url('${optimizedBg.src}');`}
  >
    <div class="absolute inset-0 bg-black/70"></div>
  </div>

  <!-- Content -->
  <Container class="relative z-10">
    <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Text Content -->
      <div>
        <div class="flex items-center gap-3 mb-3">
          <div class="h-px w-8 bg-secondary"></div>
          <span class="text-secondary text-xs font-medium tracking-widest uppercase">{lang === "es" ? "Bar y Bebidas" : "Bar & Drinks"}</span>
        </div>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-white">
          {title}
        </h2>
        <p class="text-base md:text-lg text-text leading-relaxed">
          {description}
        </p>
      </div>

      <!-- Drinks Grid -->
      <div class="grid grid-cols-2 gap-4">
        {
          drinks.map((drink) => (
            <div class="aspect-square rounded-lg overflow-hidden hover:scale-105 transition-transform duration-300 shadow-lg">
              <Image
                src={drink.image}
                alt={drink.alt}
                class="w-full h-full object-cover"
                loading="lazy"
                widths={[300, 400, 600]}
                sizes="(max-width: 768px) 50vw, 25vw"
              />
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</section>
