---
import { Image } from "astro:assets";
import photo1 from "@/assets/gallery_1.jpg";
import photo2 from "@/assets/gallery_2.jpg";
import photo3 from "@/assets/gallery_3.jpg";
import photo4 from "@/assets/gallery_4.jpg";
import photo5 from "@/assets/gallery_5.jpg";
import photo6 from "@/assets/gallery_6.jpg";

interface Props {
  title?: string;
}

const { title } = Astro.props;

const photos = [
  { image: photo1, alt: "Event impression 1" },
  { image: photo2, alt: "Event impression 2" },
  { image: photo3, alt: "Event impression 3" },
  { image: photo4, alt: "Event impression 4" },
  { image: photo5, alt: "Event impression 5" },
  { image: photo6, alt: "Event impression 6" },
];
---

<section class="bg-background">
  <div class="grid grid-cols-2 md:grid-cols-3">
    {
      photos.map((photo) => (
        <div class="overflow-hidden h-[33vh] md:h-[50vh] hover:opacity-90 transition-opacity duration-300">
          <Image
            src={photo.image}
            alt={photo.alt}
            class="w-full h-full object-cover"
            loading="lazy"
            widths={[400, 600, 800]}
            sizes="(max-width: 768px) 50vw, 33vw"
          />
        </div>
      ))
    }
  </div>
</section>
