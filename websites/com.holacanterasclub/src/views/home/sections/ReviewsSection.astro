---
import Container from "@/components/ui/Container.astro";

interface Review {
  text: string;
  author: string;
}

import type { Language } from "@/lib/i18n";

interface Props {
  title: string;
  review1: Review;
  review2: Review;
  review3: Review;
  lang: Language;
}

const { title, review1, review2, review3, lang } = Astro.props;
const reviews = [review1, review2, review3];
---

<section class="py-16 md:py-24 bg-background">
  <Container>
    <div class="text-center mb-12">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-8 bg-secondary"></div>
        <span class="text-secondary text-xs font-medium tracking-widest uppercase">{lang === "es" ? "Reseñas" : "Reviews"}</span>
        <div class="h-px w-8 bg-secondary"></div>
      </div>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white">
        {title}
      </h2>
      <div class="h-1 w-16 bg-gradient-to-r from-transparent via-secondary to-transparent mx-auto mt-4"></div>
    </div>

    <div class="grid md:grid-cols-3 gap-6 md:gap-8">
      {
        reviews.map((review) => (
          <div class="bg-surface/50 rounded-lg p-6 md:p-8 border border-border hover:border-secondary/50 transition-all">
            {/* Stars */}
            <div class="flex gap-1 mb-4">
              {Array.from({ length: 5 }).map(() => (
                <svg
                  class="w-5 h-5 text-secondary"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            {/* Review text */}
            <p class="text-text mb-4 leading-relaxed text-base">
              "{review.text}"
            </p>

            {/* Author */}
            <p class="text-primary font-bold">— {review.author}</p>
          </div>
        ))
      }
    </div>
  </Container>
</section>
