---
import Container from "@/components/ui/Container.astro";
import { Image } from "astro:assets";
import photo from "@/assets/text_2.jpeg";

import type { Language } from "@/lib/i18n";

interface Props {
  title: string;
  description: string;
  lang: Language;
}

const { title, description, lang } = Astro.props;
---

<section class="py-16 md:py-24 bg-background">
  <Container>
    <div
      class="max-w-4xl mx-auto grid md:grid-cols-2 gap-6 md:gap-8 items-center"
    >
      <!-- Image -->
      <div class="order-2 md:order-1 flex justify-center">
        <div
          class="aspect-square w-64 md:w-72 lg:w-80 rounded-lg overflow-hidden shadow-2xl border border-border"
        >
          <Image
            src={photo}
            alt="Unique party atmosphere"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            loading="lazy"
          />
        </div>
      </div>

      <!-- Content -->
      <div class="order-1 md:order-2">
        <div class="flex items-center gap-3 mb-3">
          <div class="h-px w-8 bg-secondary"></div>
          <span
            class="text-secondary text-xs font-medium tracking-widest uppercase"
            >{lang === "es" ? "Eventos" : "Events"}</span
          >
        </div>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-white">
          {title}
        </h2>
        <div
          class="h-1 w-16 bg-gradient-to-r from-secondary to-transparent mb-6"
        >
        </div>
        <p class="text-base md:text-lg text-text-muted leading-relaxed">
          {description}
        </p>
      </div>
    </div>
  </Container>
</section>
