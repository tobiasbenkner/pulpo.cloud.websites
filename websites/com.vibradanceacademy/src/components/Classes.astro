---
import { Image } from "astro:assets";
import img1 from "../assets/e-1.jpg";
import img2 from "../assets/e-2.jpg";
import img3 from "../assets/e-3.jpg";

interface Props {
  t: any;
}
const { t } = Astro.props;
---

<section id="classes" class="py-32 px-6 bg-vibra-bg">
  <div class="max-w-7xl mx-auto">
    <div
      class="flex flex-col md:flex-row justify-between items-end mb-20 border-b border-white/10 pb-10"
    >
      <h2 class="text-4xl md:text-5xl max-w-lg leading-tight">
        {t.classes.title}
      </h2>
      <p class="text-vibra-text-muted max-w-sm text-right mt-6 md:mt-0">
        {t.classes.desc}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-12">
      <!-- Card 1 -->
      <div class="group cursor-pointer">
        <div class="h-96 w-full mb-6 overflow-hidden relative shadow-luxury">
          <Image
            src={img1}
            alt={t.classes.card1_title}
            class="w-full h-full object-cover"
            width={600}
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity"
          >
          </div>
          <div class="absolute bottom-4 left-6">
            <span class="text-6xl font-display text-white italic opacity-90"
              >01</span
            >
          </div>
        </div>
        <!-- TEXTE ÜBERSETZT -->
        <h3
          class="text-2xl font-display italic mb-3 text-vibra-text-main group-hover:text-vibra-pink transition-colors"
        >
          {t.classes.card1_title}
        </h3>
        <p class="text-gray-400 text-sm leading-relaxed">
          {t.classes.card1_desc}
        </p>
      </div>

      <!-- Card 2 -->
      <div class="group cursor-pointer">
        <div class="h-96 w-full mb-6 overflow-hidden relative shadow-luxury">
          <Image
            src={img2}
            alt={t.classes.card2_title}
            class="w-full h-full object-cover"
            width={600}
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity"
          >
          </div>
          <div class="absolute bottom-4 left-6">
            <span class="text-6xl font-display text-white italic opacity-90"
              >02</span
            >
          </div>
        </div>
        <!-- TEXTE ÜBERSETZT -->
        <h3
          class="text-2xl font-display italic mb-3 text-vibra-text-main group-hover:text-vibra-pink transition-colors"
        >
          {t.classes.card2_title}
        </h3>
        <p class="text-gray-400 text-sm leading-relaxed">
          {t.classes.card2_desc}
        </p>
      </div>

      <!-- Card 3 -->
      <div class="group cursor-pointer">
        <div class="h-96 w-full mb-6 overflow-hidden relative shadow-luxury">
          <Image
            src={img3}
            alt={t.classes.card3_title}
            class="w-full h-full object-cover"
            width={600}
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent opacity-60 group-hover:opacity-40 transition-opacity"
          >
          </div>
          <div class="absolute bottom-4 left-6">
            <span class="text-6xl font-display text-white italic opacity-90"
              >03</span
            >
          </div>
        </div>
        <!-- TEXTE ÜBERSETZT -->
        <h3
          class="text-2xl font-display italic mb-3 text-vibra-text-main group-hover:text-vibra-pink transition-colors"
        >
          {t.classes.card3_title}
        </h3>
        <p class="text-gray-400 text-sm leading-relaxed">
          {t.classes.card3_desc}
        </p>
      </div>
    </div>
  </div>
</section>
