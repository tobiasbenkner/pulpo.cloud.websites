---
import { Image } from "astro:assets";
import heroImage from "../assets/hektorysara.jpeg";
import siteData from "../data/site.json";

interface Props {
  t: any;
}
const { t } = Astro.props;
---

<header class="relative min-h-screen flex items-center pt-20 overflow-hidden">
  <!-- Background Decor -->
  <div class="absolute inset-0 pointer-events-none z-0">
    <div
      class="absolute -top-[20%] -right-[10%] w-[50vw] h-[50vw] bg-gradient-to-br from-vibra-pink/8 to-transparent rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute top-[40%] -left-[10%] w-[40vw] h-[40vw] bg-gradient-to-tr from-vibra-teal/8 to-transparent rounded-full blur-3xl"
    >
    </div>
  </div>

  <div
    class="max-w-7xl mx-auto px-6 grid md:grid-cols-2 gap-6 md:gap-12 items-center w-full z-10"
  >
    <div class="order-2 md:order-1">
      <!-- LOCATION HIER ÜBERSETZT -->
      <span
        class="text-vibra-teal font-medium tracking-[0.2em] text-xs uppercase block mb-3 md:mb-6"
      >
        {t.hero.location}
      </span>
      <h1 class="text-4xl md:text-8xl mb-4 md:mb-8 leading-[1.1] text-vibra-text-main">
        {t.hero.title}
      </h1>
      <p
        class="text-vibra-text-muted text-base md:text-lg font-light max-w-md mb-6 md:mb-10 leading-relaxed"
      >
        {t.hero.subtitle}
      </p>
      <div class="flex flex-row gap-3 md:gap-5">
        <a
          href="#booking"
          class="px-6 md:px-10 py-3 md:py-4 bg-white text-[#0d0d15] hover:bg-vibra-pink hover:text-white transition-colors duration-300 uppercase tracking-widest text-xs font-semibold shadow-lg text-center"
        >
          {t.hero.cta}
        </a>
        <a
          href={siteData.social.whatsapp}
          target="_blank"
          class="px-6 md:px-10 py-3 md:py-4 border border-white/15 text-vibra-text-main hover:border-vibra-teal hover:text-vibra-teal transition-colors duration-300 uppercase tracking-widest text-xs font-semibold flex items-center justify-center gap-2"
        >
          <span>WhatsApp</span>
        </a>
      </div>
    </div>

    <div
      class="order-1 md:order-2 relative h-[35vh] md:h-[80vh] w-full bg-[#14142a] overflow-hidden shadow-2xl"
    >
      <Image
        src={heroImage}
        alt="Héktor und Sara Tanzen"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div
        class="absolute bottom-10 left-10 bg-[#14142a] p-6 shadow-luxury max-w-xs hidden md:block border-l-4 border-vibra-pink z-20"
      >
        <p class="font-display italic text-lg text-vibra-text-main">"{t.quote}"</p>
        <p class="text-xs font-bold text-gray-400 mt-2 uppercase tracking-wide">
          Héktor
        </p>
      </div>
    </div>
  </div>
</header>
