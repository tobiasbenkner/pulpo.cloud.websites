---
interface Props {
  t: any;
}
const { t } = Astro.props;
---

<section id="teachers" class="py-32 px-6 bg-vibra-surface">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-4xl md:text-5xl mb-4 font-display italic">
      Héktor <span class="text-vibra-pink">&</span> Sara
    </h2>
    <!-- SUBTITLE ÜBERSETZT -->
    <p class="text-xs uppercase tracking-[0.2em] text-gray-400 mb-16">
      {t.teachers.subtitle}
    </p>

    <div class="grid md:grid-cols-2 gap-8 text-left">
      <div
        class="bg-[#14142a] p-10 shadow-luxury hover:-translate-y-2 transition-transform duration-500"
      >
        <span class="text-4xl mb-4 block text-white/35 font-display">2024</span>
        <h3 class="text-xl font-medium mb-2">Campeones España</h3>
        <!-- DESC 1 ÜBERSETZT -->
        <p class="text-gray-400 text-sm">{t.teachers.award1_desc}</p>
      </div>
      <div
        class="bg-[#14142a] p-10 shadow-luxury hover:-translate-y-2 transition-transform duration-500"
      >
        <span class="text-4xl mb-4 block text-white/35 font-display">2023</span>
        <h3 class="text-xl font-medium mb-2">Campeones Italianos</h3>
        <!-- DESC 2 ÜBERSETZT -->
        <p class="text-gray-400 text-sm">{t.teachers.award2_desc}</p>
      </div>
      <div
        class="bg-[#14142a] p-10 shadow-luxury hover:-translate-y-2 transition-transform duration-500 md:col-span-2 border-t-4 border-vibra-teal"
      >
        <span class="text-4xl mb-4 block text-white/35 font-display">Silver</span>
        <h3 class="text-xl font-medium mb-2">
          Subcampeones FIDS Assoluto 2023
        </h3>
        <!-- DESC 3 ÜBERSETZT -->
        <p class="text-gray-400 text-sm">{t.teachers.award3_desc}</p>
      </div>
    </div>
  </div>
</section>
