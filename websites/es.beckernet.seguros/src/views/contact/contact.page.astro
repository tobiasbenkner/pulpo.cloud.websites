---
import Container from "@/components/ui/Container.astro";
import PrivacyMap from "@/components/ui/PrivacyMap.astro";
import { Icon } from "astro-icon/components";
import { siteData } from "@/data/siteData";
import type { ContactTranslations } from "./contact.i18n";
import PageHeader from "@/components/ui/PageHeader.astro";

interface Props {
  lang: string;
  t: ContactTranslations;
}

const { t } = Astro.props;
const { contact } = siteData;
---

<PageHeader
  label={t.hero.label}
  title={t.hero.headline}
  description={t.intro.text}
/>

<!-- DIRECT ACTIONS (CTAs) -->
<section class="py-8 md:py-12 border-b border-border bg-surface/5">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 lg:gap-8">
      <!-- Call CTA -->
      <a
        href={`tel:${contact.phone}`}
        class="group relative overflow-hidden bg-surface p-6 md:p-8 lg:p-10 border border-border hover:border-secondary transition-all duration-300"
      >
        <div class="flex items-start justify-between mb-5 md:mb-6">
          <div
            class="p-2.5 md:p-3 bg-background border border-border rounded-sm group-hover:bg-secondary group-hover:text-background transition-colors"
          >
            <Icon name="lucide:phone" class="w-5 md:w-6 h-5 md:h-6" />
          </div>
          <Icon
            name="lucide:arrow-up-right"
            class="w-5 md:w-6 h-5 md:h-6 text-border group-hover:text-secondary transition-colors"
          />
        </div>
        <h3 class="text-lg md:text-xl lg:text-2xl font-serif text-white mb-2">
          {t.actions.call.title}
        </h3>
        <p class="text-sm md:text-base text-text-muted mb-5 md:mb-6">
          {t.actions.call.desc}
        </p>
        <span
          class="inline-block text-secondary font-bold uppercase tracking-widest text-xs md:text-sm border-b border-secondary pb-1 group-hover:text-white group-hover:border-white transition-colors"
        >
          {t.actions.call.btn}
        </span>
      </a>

      <!-- Email CTA -->
      <a
        href={`mailto:${contact.email}`}
        class="group relative overflow-hidden bg-surface p-6 md:p-8 lg:p-10 border border-border hover:border-secondary transition-all duration-300"
      >
        <div class="flex items-start justify-between mb-5 md:mb-6">
          <div
            class="p-2.5 md:p-3 bg-background border border-border rounded-sm group-hover:bg-secondary group-hover:text-background transition-colors"
          >
            <Icon name="lucide:mail" class="w-5 md:w-6 h-5 md:h-6" />
          </div>
          <Icon
            name="lucide:arrow-up-right"
            class="w-5 md:w-6 h-5 md:h-6 text-border group-hover:text-secondary transition-colors"
          />
        </div>
        <h3 class="text-lg md:text-xl lg:text-2xl font-serif text-white mb-2">
          {t.actions.email.title}
        </h3>
        <p class="text-sm md:text-base text-text-muted mb-5 md:mb-6">
          {t.actions.email.desc}
        </p>
        <span
          class="inline-block text-secondary font-bold uppercase tracking-widest text-xs md:text-sm border-b border-secondary pb-1 group-hover:text-white group-hover:border-white transition-colors"
        >
          {t.actions.email.btn}
        </span>
      </a>
    </div>
  </Container>
</section>

<!-- LOCATION & DETAILS -->
<section class="py-12 md:py-16 lg:py-24">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 md:gap-12 lg:gap-16">
      <!-- Text Info -->
      <div class="lg:col-span-5 space-y-10 md:space-y-12">
        <div>
          <h2 class="text-xl md:text-2xl font-serif text-white mb-3 md:mb-4">
            {t.info.visit.title}
          </h2>
          <p class="text-sm md:text-base text-text-muted leading-relaxed mb-6 md:mb-8 text-balance">
            {t.info.visit.desc}
          </p>

          <div class="space-y-6 md:space-y-8 border-t border-border pt-6 md:pt-8">
            <!-- Address -->
            <div>
              <span
                class="text-xs font-bold uppercase tracking-widest text-secondary mb-3 flex items-center gap-2"
              >
                <Icon name="lucide:map-pin" class="w-4 h-4" />
                {t.info.address}
              </span>
              <a
                href={siteData.contact.googleMaps}
                target="_blank"
                rel="noopener noreferrer"
                class="text-base md:text-lg text-white font-serif pl-4 md:pl-6 border-l border-border block hover:text-secondary transition-colors whitespace-pre-line"
              >
                {contact.address}
              </a>
            </div>

            <!-- Hours -->
            <div>
              <span
                class="text-xs font-bold uppercase tracking-widest text-secondary mb-3 flex items-center gap-2"
              >
                <Icon name="lucide:clock" class="w-4 h-4" />
                {t.info.hoursLabel}
              </span>
              <div class="pl-4 md:pl-6 border-l border-border space-y-2">
                <p class="text-xs md:text-sm text-secondary font-medium italic mb-2">
                  {t.info.appointmentNote}
                </p>
                <p class="text-base md:text-lg text-white font-serif">{t.info.days}</p>
                <div class="text-text-muted font-mono text-sm space-y-1 pt-1">
                  <p>09:00 - 14:00</p>
                  <p>16:30 - 19:30</p>
                </div>

                <!-- Kleine Action Buttons -->
                <div
                  class="flex flex-wrap gap-2 md:gap-3 mt-5 md:mt-6 pt-3 md:pt-4 border-t border-white/5"
                >
                  <a
                    href={`tel:${contact.phone}`}
                    class="inline-flex items-center gap-2 px-3 py-2 text-xs font-bold uppercase tracking-wider text-text-muted border border-border hover:border-secondary hover:text-white transition-colors rounded-sm"
                  >
                    <Icon name="lucide:phone" class="w-3 h-3" />
                    {t.actions.mini.phone}
                  </a>
                  <a
                    href={`mailto:${contact.email}`}
                    class="inline-flex items-center gap-2 px-3 py-2 text-xs font-bold uppercase tracking-wider text-text-muted border border-border hover:border-secondary hover:text-white transition-colors rounded-sm"
                  >
                    <Icon name="lucide:mail" class="w-3 h-3" />
                    {t.actions.mini.email}
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Map -->
      <div class="lg:col-span-7">
        <div
          class="w-full aspect-video lg:h-full lg:aspect-auto lg:min-h-[500px] rounded-sm overflow-hidden border border-border bg-surface relative"
        >
          <div class="absolute inset-0">
            <PrivacyMap
              url={siteData.contact.googleMapsEmbed}
              accept={t.map.accept}
              loadMap={t.map.loadMap}
              showMap={t.map.showMap}
            />
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
