---
import Container from "@/components/ui/Container.astro";

interface Props {
  label?: string;
  title: string;
  description?: string;
  class?: string;
}

const { label, title, description, class: className } = Astro.props;
---

<section class:list={["relative overflow-hidden", className]}>
  <!-- Dekorative Elemente -->
  <div
    class="absolute top-0 right-0 w-64 h-64 md:w-96 md:h-96 bg-secondary/[0.07] blur-3xl rounded-full -translate-y-1/2 translate-x-1/2 pointer-events-none"
  >
  </div>
  <div
    class="absolute -left-10 md:-left-20 top-1/2 w-32 h-32 md:w-40 md:h-40 bg-secondary/[0.03] blur-2xl rounded-full pointer-events-none"
  >
  </div>

  <Container>
    <div class="relative pt-10 md:pt-12 lg:pt-14 pb-6 md:pb-8 lg:pb-10">
      <div class="max-w-4xl mx-auto text-center px-4 md:px-0">
        {
          label && (
            <div class="inline-flex md:hidden items-center gap-2.5 text-secondary font-medium text-xs tracking-[0.2em] uppercase mb-4 md:mb-5 group">
              <span class="relative flex items-center gap-2.5">
                <span class="w-5 h-px bg-gradient-to-r from-secondary to-secondary/40" />
                <span class="relative">
                  {label}
                  <span class="absolute -bottom-0.5 left-0 w-0 h-px bg-secondary/50 group-hover:w-full transition-all duration-300" />
                </span>
              </span>
            </div>
          )
        }

        <h1
          class="text-2xl sm:text-3xl md:text-4xl xl:text-5xl font-serif text-white leading-[1.15] tracking-tight mb-4 md:mb-6 relative"
        >
          <span class="relative inline-block">
            {title}
            <span
              class="absolute -inset-1 bg-gradient-to-r from-secondary/10 via-secondary/5 to-transparent blur-xl -z-10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
            >
            </span>
          </span>
        </h1>

        {
          description && (
            <div class="relative max-w-2xl mx-auto">
              <p class="text-sm sm:text-base md:text-lg text-text-muted/90 leading-relaxed">
                {description}
              </p>
            </div>
          )
        }

        <div class="empty:hidden mt-5 md:mt-6">
          <slot name="meta" />
        </div>
      </div>
    </div>
  </Container>

  <!-- Subtile Trennlinie mit Gradient -->
  <div class="relative h-px">
    <div
      class="absolute inset-0 bg-gradient-to-r from-transparent via-secondary/30 to-transparent"
    >
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-r from-transparent via-border/40 to-transparent"
    >
    </div>
  </div>
</section>
