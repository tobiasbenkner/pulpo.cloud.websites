---
import { Image } from "astro:assets";
import Container from "@/components/ui/Container.astro";
import PageHeader from "@/components/ui/PageHeader.astro";
import { Icon } from "astro-icon/components";
import type { AboutTranslations } from "./about.i18n";
import aboutImage from "@/assets/team-2.jpg";
import { getTranslatedPath } from "@/lib/registry";
import type { Language } from "@/lib/i18n";

interface Props {
  lang: Language;
  t: AboutTranslations;
}

const { t, lang } = Astro.props;
---

<PageHeader
  label={t.hero.label}
  title={t.hero.headline}
  description={t.seo.description}
/>

<section class="py-10 md:py-12 lg:py-16">
  <Container>
    <!-- Content Bereich -->
    <div
      class="grid grid-cols-1 lg:grid-cols-12 gap-8 md:gap-10 lg:gap-12 items-start"
    >
      <!-- Linke Spalte: Bild (Scrollt mit) -->
      <div class="lg:col-span-5">
        <div
          class="aspect-[4/5] w-full overflow-hidden rounded-sm bg-surface mb-6 md:mb-8 relative group"
        >
          <Image
            src={aboutImage}
            alt="Becker Team"
            class="h-full w-full object-cover"
          />
          <!-- Subtiler Rahmen ums Bild -->
          <div
            class="absolute inset-0 border border-white/10 pointer-events-none"
          >
          </div>
        </div>

        <!-- Highlight Box -->
        <div class="pl-4 md:pl-6 border-l-2 border-secondary">
          <p
            class="text-base md:text-lg text-text-muted font-serif italic leading-relaxed"
          >
            "{t.story.p6}"
          </p>
        </div>
      </div>

      <!-- Rechte Spalte: Text Narrative -->
      <div
        class="lg:col-span-7 prose prose-base md:prose-lg lg:prose-xl prose-invert prose-p:text-text-muted prose-headings:text-primary max-w-none"
      >
        <h2
          class="text-xl md:text-2xl font-serif text-primary mb-6 md:mb-8 mt-0 flex items-center gap-4"
        >
          {t.story.title}
        </h2>

        <p
          class="mb-5 md:mb-6 first-letter:text-3xl md:first-letter:text-5xl first-letter:font-serif first-letter:text-secondary first-letter:mr-2 md:first-letter:mr-3 first-letter:float-left"
        >
          {t.story.p1}
        </p>
        <p class="mb-5 md:mb-6">{t.story.p2}</p>
        <p class="mb-8 md:mb-12">{t.story.p3}</p>

        <!-- Kleiner visueller Break -->
        <div class="flex items-center gap-3 md:gap-4 my-8 md:my-12 opacity-30">
          <div class="h-px bg-white flex-1"></div>
          <Icon
            name="lucide:diamond"
            class="w-3 md:w-4 h-3 md:h-4 text-white"
          />
          <div class="h-px bg-white flex-1"></div>
        </div>

        <h3 class="text-xl md:text-2xl font-serif text-primary mb-5 md:mb-6">
          {t.story.subtitle_innovation}
        </h3>
        <p class="mb-5 md:mb-6">{t.story.p4}</p>
      </div>
    </div>
  </Container>
</section>

<!-- Values Section (Minimalistisch) -->
<section class="py-12 md:py-16 lg:py-20 border-t border-border bg-surface/20">
  <Container>
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10 lg:gap-12 text-left"
    >
      <!-- Value 1 -->
      <div class="group">
        <Icon
          name="lucide:search"
          class="w-7 md:w-8 h-7 md:h-8 text-secondary mb-3 md:mb-4 group-hover:text-white transition-colors"
        />
        <h3
          class="text-base md:text-lg font-bold mb-2 text-primary uppercase tracking-wider"
        >
          {t.values.list.trust.title}
        </h3>
        <p class="text-sm md:text-base text-text-muted leading-relaxed">
          {t.values.list.trust.desc}
        </p>
      </div>

      <!-- Value 2 -->
      <div class="group">
        <Icon
          name="lucide:scale"
          class="w-7 md:w-8 h-7 md:h-8 text-secondary mb-3 md:mb-4 group-hover:text-white transition-colors"
        />
        <h3
          class="text-base md:text-lg font-bold mb-2 text-primary uppercase tracking-wider"
        >
          {t.values.list.integrity.title}
        </h3>
        <p class="text-sm md:text-base text-text-muted leading-relaxed">
          {t.values.list.integrity.desc}
        </p>
      </div>

      <!-- Value 3 -->
      <div class="group">
        <Icon
          name="lucide:cpu"
          class="w-7 md:w-8 h-7 md:h-8 text-secondary mb-3 md:mb-4 group-hover:text-white transition-colors"
        />
        <h3
          class="text-base md:text-lg font-bold mb-2 text-primary uppercase tracking-wider"
        >
          {t.values.list.excellence.title}
        </h3>
        <p class="text-sm md:text-base text-text-muted leading-relaxed">
          {t.values.list.excellence.desc}
        </p>
      </div>
    </div>
  </Container>
</section>

<!-- Simple CTA -->
<section class="py-16 md:py-24 lg:py-32 border-t border-border">
  <Container class="text-center">
    <h2 class="mb-8 md:mb-10 font-serif text-3xl md:text-4xl lg:text-5xl">
      {t.cta.text}
    </h2>
    <a
      href={getTranslatedPath("contact", lang)}
      class="inline-block border border-secondary text-secondary px-8 md:px-10 py-3 md:py-4 text-xs md:text-sm font-bold tracking-widest uppercase hover:bg-secondary hover:text-background transition-all duration-300"
    >
      {t.cta.button}
    </a>
  </Container>
</section>
