---
import { Image } from "astro:assets";
import Container from "@/components/ui/Container.astro";
import { Icon } from "astro-icon/components";
import type { HomeTranslations } from "./home.i18n";
import { getTranslatedPath } from "@/lib/registry";

import heroImage from "@/assets/hero.jpg";
import teamImage from "@/assets/team.webp";
import languagesImage from "@/assets/languages.jpg";
import type { Language } from "@/lib/i18n";

interface Props {
  lang: Language;
  t: HomeTranslations;
}

const { lang, t } = Astro.props;
---

<!-- HERO SECTION -->
<section
  class="relative h-[calc(100dvh-4rem)] md:h-[calc(100dvh-5rem)] flex flex-col justify-center border-b border-border"
>
  <div class="absolute inset-0 z-0 overflow-hidden">
    <Image
      src={heroImage}
      alt="Consultores Inmobiliarios y de Seguros Office"
      class="w-full h-full object-cover grayscale opacity-30"
    />
    <div
      class="absolute inset-0 bg-linear-to-b from-background via-background/10 to-background"
    >
    </div>
  </div>

  <Container class="relative z-10 text-center px-4">
    <div class="inline-flex items-center gap-2 mb-6 md:mb-8 opacity-60">
      <div class="w-6 md:w-8 h-px bg-secondary"></div>
      <span class="text-sm font-bold uppercase tracking-[0.2em] text-white"
        >Est. 1999</span
      >
      <div class="w-6 md:w-8 h-px bg-secondary"></div>
    </div>

    <h1
      class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-serif text-white mb-4 md:mb-6 tracking-tight leading-[1.2]"
    >
      <span class="block">{t.hero.headline.split(".")[0]}</span>
      <span class="block text-secondary"
        >{t.hero.headline.split(".")[1]}.</span
      >
    </h1>

    <p
      class="text-lg sm:text-xl md:text-2xl text-text-muted max-w-2xl mx-auto font-light mt-6 md:mt-8 px-4"
    >
      {t.hero.subheadline}
    </p>

    <div class="mt-12 md:mt-16">
      <a
        href="#services"
        class="inline-flex flex-col items-center gap-2 text-text-muted hover:text-white transition-colors"
      >
        <span class="text-sm uppercase tracking-widest">{t.hero.cta}</span>
        <Icon
          name="lucide:arrow-down"
          class="w-5 md:w-6 h-5 md:h-6 animate-bounce"
        />
      </a>
    </div>
  </Container>
</section>

<!-- SERVICES GRID -->
<section id="services" class="border-b border-border bg-surface/10">
  <div
    class="grid grid-cols-1 lg:grid-cols-2 divide-y lg:divide-y-0 lg:divide-x divide-border border-b border-border max-w-7xl mx-auto"
  >
    <!-- Pillar 1: Real Estate -->
    <div
      class="group relative bg-background p-8 md:p-10 lg:py-24 lg:px-16 hover:bg-surface transition-colors duration-500"
    >
      <div
        class="mb-6 md:mb-8 inline-flex p-2.5 md:p-3 rounded-sm bg-surface border border-border group-hover:border-secondary/30 transition-colors"
      >
        <Icon name="lucide:key" class="w-7 md:w-8 h-7 md:h-8 text-white" />
      </div>
      <span
        class="block text-xs font-bold uppercase tracking-widest text-secondary mb-2"
        >{t.services.realestate.subtitle}</span
      >
      <h2 class="text-2xl md:text-3xl font-serif text-white mb-4 md:mb-6">
        {t.services.realestate.title}
      </h2>
      <p
        class="text-text-muted leading-relaxed text-base md:text-lg mb-6 md:mb-8"
      >
        {t.services.realestate.desc}
      </p>
      <a
        href="https://becker24.es"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-secondary text-white text-sm font-bold uppercase tracking-widest hover:bg-secondary/80 transition-colors"
      >
        {t.services.realestate.btn}
        <Icon name="lucide:arrow-right" class="w-4 h-4" />
      </a>
    </div>

    <!-- Pillar 2: Insurance -->
    <div
      class="group relative bg-background p-8 md:p-10 lg:py-24 lg:px-16 hover:bg-surface transition-colors duration-500"
    >
      <div
        class="mb-6 md:mb-8 inline-flex p-2.5 md:p-3 rounded-sm bg-surface border border-border group-hover:border-secondary/30 transition-colors"
      >
        <Icon
          name="lucide:shield-check"
          class="w-7 md:w-8 h-7 md:h-8 text-white"
        />
      </div>
      <span
        class="block text-xs font-bold uppercase tracking-widest text-secondary mb-2"
        >{t.services.insurance.subtitle}</span
      >
      <h2 class="text-2xl md:text-3xl font-serif text-white mb-4 md:mb-6">
        {t.services.insurance.title}
      </h2>
      <p
        class="text-text-muted leading-relaxed text-base md:text-lg mb-6 md:mb-8"
      >
        {t.services.insurance.desc}
      </p>
      <a
        href="https://seguros.beckernet.es"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-secondary text-white text-sm font-bold uppercase tracking-widest hover:bg-secondary/80 transition-colors"
      >
        {t.services.insurance.btn}
        <Icon name="lucide:arrow-right" class="w-4 h-4" />
      </a>
    </div>
  </div>
</section>

<!-- STATS / FACTS -->
<section class="py-12 md:py-16 bg-surface/10 border-b border-border">
  <Container>
    <div
      class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8 text-center divide-y md:divide-y-0 md:divide-x divide-border/50"
    >
      <div class="px-4 py-6 md:py-4">
        <span
          class="block text-3xl sm:text-4xl md:text-5xl font-serif text-white mb-2"
          >25+</span
        >
        <span class="text-xs uppercase tracking-widest text-text-muted"
          >{t.features.y1}</span
        >
      </div>
      <div class="px-4 py-6 md:py-4">
        <span
          class="block text-3xl sm:text-4xl md:text-5xl font-serif text-white mb-2"
          >2</span
        >
        <span class="text-xs uppercase tracking-widest text-text-muted"
          >{t.features.y2}</span
        >
      </div>
      <div class="px-4 py-6 md:py-4">
        <span
          class="block text-3xl sm:text-4xl md:text-5xl font-serif text-white mb-2"
          >100%</span
        >
        <span class="text-xs uppercase tracking-widest text-text-muted"
          >{t.features.y3}</span
        >
      </div>
    </div>
  </Container>
</section>

<!-- SPECIALISTS SECTION -->
<section class="py-16 md:py-24 border-b border-border">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div>
        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-serif text-white mb-5 md:mb-6 leading-tight"
        >
          {t.specialists.title}
        </h2>
        <div class="w-16 md:w-20 h-1 bg-secondary mb-6 md:mb-8"></div>
        <p class="text-base md:text-lg text-text-muted leading-relaxed">
          {t.specialists.desc}
        </p>
      </div>
      <div>
        <Image
          src={teamImage}
          alt="Becker Team"
          class="w-full rounded-sm border border-border"
        />
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 mt-12 md:mt-16">
      <!-- Real Estate Services -->
      <div class="bg-surface/30 p-6 md:p-8 border border-border rounded-sm">
        <div class="flex items-center gap-3 mb-6">
          <div class="p-2 bg-secondary/10 rounded-sm">
            <Icon name="lucide:key" class="w-6 h-6 text-secondary" />
          </div>
          <h3 class="text-xl md:text-2xl font-serif text-white">
            {t.specialists.realestate.title}
          </h3>
        </div>
        <ul class="space-y-3">
          {
            t.specialists.realestate.items.map((item: string) => (
              <li class="flex items-start gap-3">
                <Icon
                  name="lucide:check"
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                />
                <span class="text-text-muted">{item}</span>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Insurance Services -->
      <div class="bg-surface/30 p-6 md:p-8 border border-border rounded-sm">
        <div class="flex items-center gap-3 mb-6">
          <div class="p-2 bg-secondary/10 rounded-sm">
            <Icon name="lucide:shield-check" class="w-6 h-6 text-secondary" />
          </div>
          <h3 class="text-xl md:text-2xl font-serif text-white">
            {t.specialists.insurance.title}
          </h3>
        </div>
        <ul class="space-y-3">
          {
            t.specialists.insurance.items.map((item: string) => (
              <li class="flex items-start gap-3">
                <Icon
                  name="lucide:check"
                  class="w-5 h-5 text-secondary shrink-0 mt-0.5"
                />
                <span class="text-text-muted">{item}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Container>
</section>

<!-- LANGUAGES SECTION -->
<section class="py-16 md:py-24 border-b border-border bg-surface/10">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="order-2 lg:order-1">
        <Image
          src={languagesImage}
          alt="Multilingual service"
          class="w-full rounded-sm border border-border"
        />
      </div>
      <div class="order-1 lg:order-2">
        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-serif text-white mb-5 md:mb-6 leading-tight"
        >
          {t.languages.title}
        </h2>
        <div class="w-16 md:w-20 h-1 bg-secondary mb-6 md:mb-8"></div>
        <p class="text-base md:text-lg text-text-muted leading-relaxed mb-6">
          {t.languages.desc}
        </p>
        <p class="text-base md:text-lg text-text-muted leading-relaxed mb-8">
          {t.languages.extra}
        </p>
        <div class="flex flex-wrap gap-3">
          {
            t.languages.list.map((lang: string) => (
              <span class="px-4 py-2 bg-surface border border-border rounded-sm text-white text-sm font-medium">
                {lang}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </Container>
</section>

<!-- FINAL CTA -->
<section class="py-16 md:py-24 lg:py-32 bg-background text-center">
  <Container>
    <h2
      class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-serif text-white mb-8 md:mb-10 px-4"
    >
      {t.cta.text}
    </h2>
    <a
      href={getTranslatedPath("contact", lang)}
      class="inline-block px-8 md:px-10 py-3 md:py-4 bg-white text-background text-sm md:text-base font-bold uppercase tracking-widest hover:bg-secondary hover:text-white transition-all duration-300"
    >
      {t.cta.btn}
    </a>
  </Container>
</section>
