---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  desc: string;
  iconName: string;
}

const { title, desc, iconName } = Astro.props;
---

<div
  class="group h-full p-8 bg-white border border-gray-100 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1 hover:border-pulpo-primary/20"
>
  <div
    class="w-14 h-14 bg-pulpo-surface-warm text-pulpo-primary rounded-xl flex items-center justify-center mb-6 transition-colors duration-300 group-hover:bg-pulpo-primary group-hover:text-white"
  >
    <Icon name={iconName} class="w-7 h-7" />
  </div>
  <h3
    class="text-xl font-bold text-pulpo-dark mb-3 group-hover:text-pulpo-primary transition-colors"
  >
    {title}
  </h3>
  <p class="text-gray-600 leading-relaxed text-sm lg:text-base">
    {desc}
  </p>
</div>
