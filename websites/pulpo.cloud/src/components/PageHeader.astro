---
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<div class="bg-pulpo-surface py-16 text-center border-b border-gray-100">
  <div class="max-w-4xl mx-auto px-4">
    <h1 class="text-4xl font-bold text-pulpo-dark mb-4">{title}</h1>
    <p class="text-xl text-gray-600">{subtitle}</p>
  </div>
</div>
